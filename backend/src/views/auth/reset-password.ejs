<%- contentFor('body') %>

<div class="background">
    <div class="particles">
        <!-- Particle elements will be generated dynamically -->
    </div>
</div>

<div class="main-content">
    <div class="container">
        <!-- Left Panel -->
        <div class="left-panel">
            <div class="car-showcase">
                <div class="overlay">
                    <div class="brand">
                        <h1>Reset Your Key</h1>
                        <p>Create New Access</p>
                    </div>
                    <div class="tagline">
                        "Set your new password to regain access to luxury."
                    </div>
                    <div class="car-model-container">
                        <div class="car-model"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Right Panel -->
        <div class="right-panel">
            <div class="login-header">
                <h2>Reset Password</h2>
                <p>Enter your new password below.</p>
            </div>
            <form class="reset-form" id="resetPasswordForm">
                <div class="form-group">
                    <label for="password">New Password</label>
                    <input type="password" id="password" name="password" placeholder="Enter new password" required>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm new password" required>
                </div>
                <button type="submit" class="btn">Reset Password</button>
            </form>
        </div>
    </div>
</div>

<%- contentFor('scripts') %>
<script>
document.getElementById('resetPasswordForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const password = document.getElementById('password').value;
    const confirmPassword = document.getElementById('confirmPassword').value;

    if (password !== confirmPassword) {
        alert('Passwords do not match');
        return;
    }

    try {
        const response = await fetch('/auth/reset-password/<%= token %>', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ password })
        });

        const data = await response.json();

        if (data.success) {
            alert(data.message);
            window.location.href = '/auth/login';
        } else {
            alert(data.message);
        }
    } catch (error) {
        alert('An error occurred. Please try again.');
    }
});
</script> 